@model UmniahAssignment.Models.Users

@{
    ViewData["Title"] = "Login";
}

<partial name="_Notifications" />

<div id="containers" class="container mt-5 w-25 bg-white">
    <h2 id="heading" class="text-center text-grey">Login</h2>

    <form method="post">
        <div class="">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="align-items-center password-container">
            <div class="">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        </div>

        <div id="submit-button" class="text-center">
            <button type="submit" class="btn btn-primary mt-3">Login</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}